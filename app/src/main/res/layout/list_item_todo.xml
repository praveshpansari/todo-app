<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="0dp"
    android:paddingEnd="16dp"
    android:paddingBottom="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_tv_priority_today"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="?android:attr/textCursorDrawable"
            app:tint="#FF0101" />

        <TextView
            android:id="@+id/list_item_tv_title_today"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#2C2C2E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_tv_date_today"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#2C2C2E"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/todo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:paddingStart="40dp"
        android:paddingRight="16dp"
        android:text="asdad"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#636366"
        android:textSize="13sp"
        android:textStyle="italic" />

</LinearLayout>